<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".Activity.AddAspirasiPart1">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/aspirasipicture" />

        <TextView
            android:id="@+id/instansitujuan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/montserrat"
            android:text="Masukkan instansi tujuan *"
            android:textSize="16dp"/>

        <EditText
            android:id="@+id/inputInstansi"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:ems="10"
            android:layout_marginTop="15dp"
            android:inputType="textPersonName"
            android:fontFamily="@font/montserrat"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:background="@drawable/background_paintext2"/>

        <TextView
            android:id="@+id/KategoriAspirasi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/montserrat"
            android:text="Masukkan kategori Aspirasi *"
            android:textSize="16dp"/>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <AutoCompleteTextView
                android:id="@+id/inputKategori"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/background_paintext2"
                />
        </com.google.android.material.textfield.TextInputLayout>

</LinearLayout>

</FrameLayout>