<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:orientation="vertical"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".Activity.HomeFragment"
xmlns:tools="http://schemas.android.com/tools">
<LinearLayout
    android:orientation="horizontal"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="30dp"
    android:layout_marginLeft="10dp">
    <TextView
        android:id="@+id/judulaplikasi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="30dp"
        android:text="ZonaAspirasi"
        android:textColor="#56ABFA"
        android:textSize="28sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/logoaplikasi"
        android:layout_width="68dp"
        android:layout_height="45dp"
        android:layout_marginTop="4dp"
        app:srcCompat="@drawable/logoaspirasi" />
</LinearLayout>

<ImageView
    android:id="@+id/homeimage"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:srcCompat="@drawable/home" />
<LinearLayout
    android:orientation="horizontal"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp">

    <TextView
        android:id="@+id/ucapandatang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:text="Selamat Datang, Amanda!"
        android:textSize="25dp"
        android:textStyle="bold" />
</LinearLayout>
<LinearLayout
    android:orientation="horizontal"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="40dp"
    android:layout_marginRight="20dp"
    android:layout_marginTop="50dp">
    <androidx.cardview.widget.CardView
        android:layout_width="150dp"
        android:layout_height="match_parent"
        app:cardBackgroundColor="#56ABFA"
        app:cardCornerRadius="10dp">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">
            <ImageView
                android:id="@+id/iconaspirasi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/laporan"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="10dp"/>
            <TextView
                android:id="@+id/aspirasibold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Aspirasi"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="20dp" />
            <TextView
                android:id="@+id/aspirasimean"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:text="Sebagai wadah penyampaian aspirasi dan Laporan secara cepat dan mudah"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="15dp" />

            <ImageView
                android:id="@+id/panah"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_baseline_keyboard_arrow_right_24"
                android:layout_marginLeft="110dp"
                android:layout_marginTop="3dp"/>
        </LinearLayout>

    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="150dp"
        android:layout_height="match_parent"
        app:cardBackgroundColor="#56ABFA"
        android:layout_marginLeft="30dp"
        app:cardCornerRadius="10dp">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">
            <ImageView
                android:id="@+id/iconpengumuman"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/pengumuman"
                android:layout_marginLeft="35dp"
                android:layout_marginTop="10dp"/>
            <TextView
                android:id="@+id/pengumuman"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pengumuman"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="20dp" />
            <TextView
                android:id="@+id/pengumumanmean"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:text="Menyampaikan informasi terbaru dan terpercaya"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="15dp" />
            <ImageView
                android:id="@+id/iconpanah"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_baseline_keyboard_arrow_right_24"
                android:layout_marginLeft="110dp"
                android:layout_marginTop="3dp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
</LinearLayout>