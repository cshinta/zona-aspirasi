<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/halaman_aspirasi_6">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_marginRight="20dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/back"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/ic_baseline_arrow_back_25">
                </Button>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="3dp"
                    android:text="Sampaikan Aspirasi Anda"
                    android:textSize="20dp"
                    android:textColor="@color/white"/>

            </LinearLayout>

        </android.widget.Toolbar>

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="200dp"
            android:background="@drawable/aspirasipicture"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="65dp">
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginHorizontal="40dp"
            android:layout_marginTop="60dp">

            <TextView
                android:id="@+id/instansitujuan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/montserrat"
                android:text="Masukkan instansi tujuan *"
                android:textSize="16dp"/>

            <EditText
                android:id="@+id/editTextNamaLengkap"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:ems="10"
                android:layout_marginTop="15dp"
                android:inputType="textPersonName"
                android:fontFamily="@font/montserrat"
                android:textSize="20dp"
                android:textColor="@color/black"
                android:background="@drawable/background_paintext2"/>

            <TextView
                android:id="@+id/KategoriAspirasi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/montserrat"
                android:text="Masukkan kategori Aspirasi *"
                android:textSize="16dp"/>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <AutoCompleteTextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/background_paintext2"
                    />
            </com.google.android.material.textfield.TextInputLayout>

            <Button
                android:id="@+id/buttonsimpan"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="70dp"
                android:backgroundTint="#56ABFA"
                android:text="Selanjutnya"
                android:textAllCaps="false"
                android:textSize="16dp"
                app:cornerRadius="10dp" />
        </LinearLayout>

    </LinearLayout>


</ScrollView>