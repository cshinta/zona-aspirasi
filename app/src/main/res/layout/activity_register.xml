<?xml version="1.0" encoding="utf-8"?>
<ScrollView
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".Activity.RegisterActivity">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginHorizontal="30dp"
    android:layout_marginVertical="30dp"
    android:orientation="vertical"
    android:layout_gravity="center_vertical">

    <TextView
        android:id="@+id/judul"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat"
        android:text="Daftar"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="28dp"
        android:textStyle="bold"
        android:layout_marginBottom="20dp"/>

    <TextView
        android:id="@+id/inputNama"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:text="Nama Lengkap"
        android:textColor="@color/black"
        android:textSize="14dp" />

    <EditText
        android:id="@+id/nameInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat"
        android:ems="10"
        android:background="@drawable/custom_input"
        android:hint="Masukkan Nama Lengkap"
        android:textSize="12dp"
        android:height="30dp"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        tools:ignore="TouchTargetSizeCheck"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:id="@+id/inputNik"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:text="Nomor Induk Kependudukan"
        android:textColor="@color/black"
        android:textSize="14dp" />

    <EditText
        android:id="@+id/nikInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat"
        android:ems="10"
        android:background="@drawable/custom_input"
        android:hint="Masukkan Nomor Induk Kependudukan"
        android:textSize="12dp"
        android:height="30dp"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        tools:ignore="TouchTargetSizeCheck"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:id="@+id/inputEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:text="Email"
        android:textColor="@color/black"
        android:textSize="14dp" />

    <EditText
        android:id="@+id/emailInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat"
        android:ems="10"
        android:hint="Masukkan Email"
        android:textSize="12dp"
        android:height="30dp"
        android:background="@drawable/custom_input"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        tools:ignore="TouchTargetSizeCheck"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:id="@+id/inputHp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:text="Nomor Handphone"
        android:textColor="@color/black"
        android:textSize="14dp" />

    <EditText
        android:id="@+id/hpInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat"
        android:ems="10"
        android:hint="Masukkan Nomor Handphone"
        android:background="@drawable/custom_input"
        android:textSize="12dp"
        android:height="30dp"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        tools:ignore="TouchTargetSizeCheck"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:id="@+id/inputPass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:text="Kata sandi"
        android:textColor="@color/black"
        android:textSize="14dp" />

    <EditText
        android:id="@+id/passInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat"
        android:ems="10"
        android:hint="Masukkan Kata sandi"
        android:background="@drawable/custom_input"
        android:textSize="12dp"
        android:height="30dp"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        tools:ignore="TouchTargetSizeCheck"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:id="@+id/inputKonfirmasi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:text="Konfirmasi Kata sandi"
        android:textColor="@color/black"
        android:textSize="14dp" />

    <EditText
        android:id="@+id/konfInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat"
        android:ems="10"
        android:hint="Masukkan Ulang Kata sandi"
        android:background="@drawable/custom_input"
        android:textSize="12dp"
        android:height="30dp"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        tools:ignore="TouchTargetSizeCheck"
        android:layout_marginBottom="15dp"/>

    <Button
        android:id="@+id/addAkun"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/montserrat"
        android:outlineAmbientShadowColor="#56ABFA"
        android:text="Buat Akun"
        android:textSize="14dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal">

        <TextView
            android:id="@+id/konfirmasiInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="Sudah punya akun?"
            android:textSize="12dp"
            tools:ignore="TouchTargetSizeCheck"
            android:onClick="navigate_login"
            android:clickable="true"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Masuk"
            android:textColor="#56ABFA"
            android:layout_marginLeft="5dp"
            android:onClick="navigate_login"
            android:clickable="true"
            />

    </LinearLayout>
</LinearLayout>
</ScrollView>
